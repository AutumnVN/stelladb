---
interface Props {
    href: string;
    name: string;
    desc?: string;
    desc2?: string;
    star?: number;
    image: string;
    imageFallback?: string;
    inset?: number;
    corner?: string;
    charClass?: string;
    attackType?: string;
}

const { href, name, desc, desc2, star, image, imageFallback, inset = 0, corner, charClass, attackType } = Astro.props;
---

<div class={`card-border ${star ? `star${star}` : ''}`}>
    <a href={href} class="card">
        <div class="image" style={`background-image: url(${image})${imageFallback ? `, url(${imageFallback})` : ''}; inset: ${inset}px`}></div>
        <div class="text">
            <h2>{name}</h2>
            {desc && <p>{desc}</p>}
            {desc2 && <p>{desc2}</p>}
        </div>
        {
            charClass && attackType && (
                <div class={`char-info ${charClass.toLowerCase()}`}>
                    <div class="char-class">{charClass}</div>
                    <div class="attack-type">
                        <img src={`/${attackType}.png`} width="16" height="16" alt={attackType} />
                    </div>
                </div>
            )
        }
    </a>
    {corner && <img class="corner" src={corner} width="48" height="48" />}
</div>

<style>
    .card-border {
        display: block;
        position: relative;
        transition: transform 180ms ease, filter 180ms ease;
    }

    .card {
        display: block;
        position: relative;
        background: var(--bg2);
        padding: 0;
        aspect-ratio: 1 / 1;
        overflow: hidden;
        color: var(--text);
        text-decoration: none;
        border: 1px solid #ffffff0f;
        border-radius: 10px;
        box-shadow: 0 10px 28px #0008;
        transition: transform 180ms ease, box-shadow 180ms ease, border-color 180ms ease;
    }

    .card-border:hover .card,
    .card-border:focus-within .card {
        transform: translateY(-4px);
        border-color: #ffffff2a;
        box-shadow: 0 16px 32px #000b;
    }

    .card-border:not([class*='star']) .card {
        border-radius: 10px;
    }

    .card-border[class*='star'] {
        mask:
            linear-gradient(transparent 0 0) content-box,
            linear-gradient(#000 0 0);
        mask-composite: exclude;
        border-radius: 10px;
        padding: 5px;
    }

    .star3 {
        background: linear-gradient(135deg, #8ce, #dff);
    }

    .star4 {
        background: linear-gradient(135deg, #fd5, #efc);
    }

    .star5 {
        background: linear-gradient(135deg, #d8e, #7ff);
    }

    .image {
        position: absolute;
        inset: 0;
        background-position: top;
        background-size: cover;
        background-repeat: no-repeat;
        transform: scale(1);
        transition: transform 220ms ease;
    }

    .card-border:hover .image {
        transform: scale(1.04);
    }

    .text {
        position: absolute;
        right: 0;
        bottom: 0;
        left: 0;
        padding: 0.75rem 0.75rem 0.85rem;
        isolation: isolate;
    }

    .text::before {
        content: '';
        position: absolute;
        inset: -10px -10px -6px -10px;
        background: linear-gradient(180deg, #0000 0%, #0009 35%, #000d 75%, #000f 100%);
        border-radius: 0 0 10px 10px;
        z-index: 0;
    }

    .text > * {
        position: relative;
        z-index: 1;
        text-shadow: 0 1px 6px #000a;
    }

    .char-info {
        display: flex;
        position: absolute;
        top: 0;
        right: 0;
        align-items: center;
        clip-path: polygon(0% 0%, 100% 0%, 100% 100%, 7% 100%);
        letter-spacing: 0.01em;
        text-transform: uppercase;
        font-weight: 700;
        font-size: 0.9rem;
    }

    .vanguard {
        background: #d69;
    }

    .versatile {
        background: #78e;
    }

    .support {
        background: #4ca;
    }
    .char-info .char-class {
        padding: 0.32em 0.4em 0.32em 0.9em;
    }

    .char-info .attack-type {
        clip-path: polygon(0% 0%, 100% 0%, 100% 100%, 20% 100%);
        background: #36a;
        padding: 0.39em 0.44em 0.17em 0.72em;
    }

    .card h2 {
        margin: 0;
        font-size: 1.15rem;
        line-height: 1.35;
        letter-spacing: 0.01em;
    }

    .card p {
        margin: 0.35rem 0 0 0;
        font-size: 0.85rem;
        color: var(--muted);
        line-height: 1.5;
    }

    .corner {
        position: absolute;
        top: -4px;
        left: -4px;
        pointer-events: none;
    }
</style>
