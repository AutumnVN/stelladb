const url = 'https://docs.google.com/spreadsheets/d/1otsS2C1RkXLaFSvp2SMOS-vtRBaEBpZlcgR361_fdAE/edit?gid=283047779#gid=283047779';

const response = await fetch(url);
const html = await response.text();

import { style, nav, clientScript } from '@/scripts/infodoc.js';

const modifiedHtml = html.replace('<div class="grid-table-container">', `${nav}$&`).replace(
    /<head>(?!<style>)/,
    `$&${style}
        ${clientScript(url)}`,
);

return new Response(modifiedHtml, {
    headers: {
        'Content-Type': 'text/html',
    },
});
